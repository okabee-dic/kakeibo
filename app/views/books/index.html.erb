<div class="contentContainer">
  <h2 class="title">家計簿を選ぶ</h2>

  <table class="table table_border mb10">
    <tr>
      <th>名前</th>
      <th>-</th>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to book.name, book_path(book.id) %>
      </td>
      <td>
        <%= link_to "削除", book_path(book.id) , method: :delete %>
      </td>
    </tr>
    
  <% end %>
  </table>
  
  <div class="pt10">
    <p>
      <%= link_to "新規家計簿を作成", new_book_path %>
    </p>
  </div>
</div>