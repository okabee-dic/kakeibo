<% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= @store.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with(model: @store, local: true) do |form| %>
  <div class="pb10">
  <%= form.label :name %>
  <%= form.text_field :name %>
  </div>
  <div class="pb10">
    <%= form.label :genre_id %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name %>
  </div>
  <div class="pb10">
    <%= form.hidden_field :book_id, value: @bookid %>
    <%= form.submit "送信" %>
  </div>
<% end %>